@namespace UI
@using UI.Shared.Component.Base
@inherits UIComponentBase

<div @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="z-index:1100; @StyleNames" @attributes="@Attributes">
    <div class="toast-header">
        <Icon Name="@iconName" CustomIconName="@ToastMessage.CustomIconName" class="@iconClass"></Icon>
        <strong class="me-auto">@ToastMessage.Title</strong>
        <small class="text-muted">@ToastMessage.HelpText</small>
        @if (!AutoHide || ShowCloseButton)
        {
            <button type="button" class="btn-close" aria-label="Close" @onclick="HideAsync"></button>
        }
    </div>
    <div class="toast-body">
        @ToastMessage.Message
    </div>
    <UI.Progress Height="3">
        <UI.ProgressBar @ref="toastProgressBar" Color="@progressColor" Width="toastProgressBarWidth"/>
    </UI.Progress>
</div>